<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/myLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Details Etudiant"
        android:id="@+id/textView2"
        android:layout_x="110dp"
        android:layout_y="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entrer numero"
        android:id="@+id/textView3"
        android:layout_x="30dp"
        android:layout_y="50dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/edtNum"
        android:layout_x="150dp"
        android:layout_y="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entrer votre nom"
        android:id="@+id/textView4"
        android:layout_x="30dp"
        android:layout_y="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_x="206dp"
        android:layout_y="96dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:id="@+id/textView5"
        android:layout_x="30dp"
        android:layout_y="150dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/edtAge"
        android:layout_x="150dp"
        android:layout_y="150dp"
        android:inputType="number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/btnAdd"
        android:layout_x="30dp"
        android:layout_y="200dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="New Button"
        android:id="@+id/btnSup"
        android:layout_x="150dp"
        android:layout_y="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_x="30dp"
        android:layout_y="250dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_x="150dp"
        android:layout_y="250dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Afficher tout"
        android:id="@+id/btvnViewAll"
        android:layout_x="30dp"
        android:layout_y="300dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="A propos"
        android:id="@+id/btnInf"
        android:layout_x="150dp"
        android:layout_y="300dp" />
</AbsoluteLayout>